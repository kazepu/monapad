{
  "name": "monapad",
  "version": "1.1.2",
  "description": "notepad app",
  "main": "main.js",
  "build": {
    "appId": "com.sheetau.monapad",
    "productName": "Monapad",
    "win": {
      "target": "nsis",
      "icon": "icon/favicon.ico"
    },
    "files": [
      "main.js",
      "preload.js",
      "font/**/*",
      "icon/**/*",
      "index.html",
      "build/**/*",
      "locales/**/*.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "sheetau",
        "repo": "monapad"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
